{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about_url": "http://example.com/the-spatialx-schema",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "validators": "if_empty_same_as(name)",
